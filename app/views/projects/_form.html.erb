<%= form_for(@project) do |f| %>
  <div>
    <p><%= f.label "Name Your Diversion:" %><p>
    <%= f.text_field :name, :size=>"97" %>
  </div>
  <div>  
    <p><%= f.label "Describe Your Diversion:" %></p>
    <%= f.text_area :description, :cols => "100", :rows => "20" %>
  </div>
  <div>  
    <%= f.label "Start Date:" %>
    <%= f.datetime_select :start_at %>
  </div>
  <div>  
    <%= f.label "End Date:" %>
    <%= f.datetime_select :end_at %>
  </div>
  <div>
    <%= f.label "Add file or image:" %>
    <%= f.file_field :file %>
  </div> 

    <%= f.submit %>
  <% end %> 



      


